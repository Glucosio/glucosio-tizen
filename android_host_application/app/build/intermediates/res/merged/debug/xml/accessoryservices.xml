            id="glucosio_companion_gear"
            name="helloaccessory"
            role="provider"
            serviceImpl="com.samsung.android.sdk.accessory.example.helloaccessory.provider.ProviderService"
            version="1.0"
            serviceLimit="ANY"
            serviceTimeout="10">
            <supportedTransports>
                <transport type="TRANSPORT_BT" />
